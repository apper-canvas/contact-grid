{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to access home",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/contacts": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to view contacts",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/deals": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to view deals",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/companies": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to view companies",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/companies/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to view company details",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    },
    "excludeRedirectQuery": true
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    },
    "excludeRedirectQuery": true
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      }
    },
    "excludeRedirectQuery": true
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    },
    "excludeRedirectQuery": true
  },
  "/reset-password/:appId/:fields": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Reset password page is public",
            "rule": "public"
          }
        ]
      }
    },
    "excludeRedirectQuery": true
  },
  "/prompt-password/:appId/:emailAddress/:provider": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Prompt password page is public",
            "rule": "public"
          }
        ]
      }
    },
    "excludeRedirectQuery": true
  }
}